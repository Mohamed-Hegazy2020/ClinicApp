@using App.Presentation.Models.Identity
@model IEnumerable<ApplicationUserModel>
@{
    ViewData["Title"] = "UsersList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-3">
    <div class="card shadow-lg border-0">
        <div class="card-body">
            <form asp-action="UserList" method="get" class="mb-3">
                <div class="buttonsbox d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fa fa-users"></i>
                        @_Localization.GetLocalizedHtmlString("UsersList")
                    </h5>

                    <a asp-action="AddUser" class="btn btn-success">
                        <i class="fa fa-user-plus"></i>
                        @_Localization.GetLocalizedHtmlString("CreateNewUser")
                    </a>
                </div>
                <div class="clearfix"></div>

                <div class="input-group pt-2">
                    <input type="text" name="search" value="@ViewBag.Search"
                           class="form-control"
                           placeholder="@_Localization.GetLocalizedHtmlString("Search")" />
                    <button class="btn btn-secondary">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>@_Localization.GetLocalizedHtmlString("UserName")</th>
                            <th>@_Localization.GetLocalizedHtmlString("Email")</th>
                            <th>@_Localization.GetLocalizedHtmlString("Role")</th>
                            <th class="text-end">@_Localization.GetLocalizedHtmlString("Actions")</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int i = 1;
                            foreach (var user in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@user.UserName</td>
                                    <td>@user.Email</td>
                                    <td>                                      
                                         @string.Join(",", user.SelectedRoles ?? new List<string>()) 
                                    </td>

                                    <td class="text-end">
                                        <div class="d-inline-flex gap-1">

                                            <a asp-action="Details" asp-route-id="@user.Id"
                                               class="btn btn-info btn-sm">
                                                <i class="fa fa-eye"></i>
                                                @_Localization.GetLocalizedHtmlString("Details")
                                            </a>

                                            <a asp-action="Edit" asp-route-id="@user.Id"
                                               class="btn btn-warning btn-sm">
                                                <i class="fa fa-edit"></i>
                                                @_Localization.GetLocalizedHtmlString("Edit")
                                            </a>

                                            <a asp-action="Delete" asp-route-id="@user.Id"
                                               class="btn btn-danger btn-sm"
                                               onclick="return confirm('@_Localization.GetLocalizedHtmlString("ConfirmDelete")')">
                                                <i class="fa fa-trash"></i>
                                                @_Localization.GetLocalizedHtmlString("Delete")
                                            </a>

                                        </div>
                                    </td>

                                </tr>
                                i++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-danger">
                                    @_Localization.GetLocalizedHtmlString("NoDataFound")
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>

        </div>
    </div>
</div>

